<div class="content container grid-xl center-container">
    <div class="products">
        <% data.products.forEach(function(p) { %>
        <div class="card product">
            <a href="/<%= p.url %>">
                <div class="card-image">
                    <img class="p-img img-1" src="/img/<%= p.img %>" alt="<%= p.caption %>">
                    <img class="p-img img-2" src="/img/<%= p.bgImg %>" alt="<%= p.caption %>">
                </div>
            </a>
            <div class="card-header">
                <div class="card-title h5">
                    <a href="/<%= p.url %>">
                        <%= p.caption %>
                    </a>
                </div>
                <div class="card-subtitle text-gray">
                    <a href="/<%= p.url %>">
                        <%- p.description %>
                    </a>
                </div>
            </div>
            <div class="card-body">

                <div class="price">
                    Цена: <b><%= p.price %></b> руб.
                </div>

            </div>
            <div class="card-footer text-right">
                <div product_img="/img/<%= p.img %>" 
                    product_id='<%= p.id %>'
                    product_caption='<%= p.caption %>' 
                    product_price='<%= p.price %>' 
                    class='card-button'>
                </div>
            </div>

        </div>
        <% }); %>
    </div>

</div>