<% include ../Partial/head.ejs %>

<div class="main-content content container grid-xl center-container">
    <div class="blog-page center-container">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/"><i class="icon icon-arrow-left"></i> На главную</a>
            </li>

            <li class="breadcrumb-item">
                <a href="/blog">Блог</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/blog/<%= data.fGetUrl(data.blog.id)(data.blog.title) %>"><%= data.blog.title %></a>
            </li>

           
        </ul>
        
        <h1><%= data.blog.title %></h1>

        <div class="blog-post">
            <img class="blog-post-main-img" src="<%= data.blog.main_img %>"
            alt="<%= data.blog.title %>">
            <%- data.blog.body %>
        </div>

    </div>
</div>




