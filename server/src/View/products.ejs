<div class="content container grid-xl center-container">
    <div class="products">
        <% products.forEach(function(p) { %>
        <div class="card product">
            <a href="/<%= p.url %>">
                <div class="card-image">
                    <img class="p-img img-1" src="/img/<%= p.img %>" alt="<%= p.caption %>">
                    <img class="p-img img-2" src="/img/<%= p.bgImg() %>" alt="<%= p.caption %>">
                </div>
            </a>
            <div class="card-header">
                <div class="card-title h5"><%= p.caption %></div>
                <div class="card-subtitle text-gray"><%- p.description %></div>
            </div>
            <div class="card-body">
                <!--   Состав:
                <ul>
                    <li><b>Какао</b>: 30%</li>
                    <li><b>Орехи</b>: 30%</li>
                    <li><b>Сухое молоко</b>: 30%</li>
                </ul> -->

                <div class="price">
                    Цена: <b><%= p.price %></b> руб.
                </div>

            </div>
            <div class="card-footer text-right">
                <div product_img="/img/<%= p.img %>" product_id='<%= p.id %>' product_caption='<%= p.caption %>'
                    product_price='<%= p.price %>' class='cart-button'></div>
            </div>

        </div>
        <% }); %>
    </div>

</div>